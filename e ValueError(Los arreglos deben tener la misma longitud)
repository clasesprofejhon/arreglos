[32m+[m[32m        arreglo2 = [][m
[32m+[m
[32m+[m[32m        print("Ingrese los elementos del primer arreglo:")[m
[32m+[m[32m        for i in range(tamanio):[m
[32m+[m[32m            valor = float(input(f"Elemento {i+1}: "))[m
[32m+[m[32m            arreglo1.append(valor)[m
[32m+[m
[32m+[m[32m        print("Ingrese los elementos del segundo arreglo:")[m
