[32m+[m[32mdef suma_arreglos(arreglo1, arreglo2):[m
[32m+[m[32m    if len(arreglo1) != len(arreglo2):[m
[32m+[m[32m        raise ValueError("Los arreglos deben tener la misma longitud")[m
[32m+[m[41m    [m
[32m+[m[32m    resultado = [a + b for a, b in zip(arreglo1, arreglo2)][m
[32m+[m[32m    return resultado[m
[32m+[m
